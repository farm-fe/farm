{
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
