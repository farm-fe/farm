{
  
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "~utils": ["./test-utils.ts"]
    }
  }
}
